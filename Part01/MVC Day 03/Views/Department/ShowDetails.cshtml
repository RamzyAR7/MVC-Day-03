@model MVC_Day_03.ViewModels.DepartmentViewModels

@{
    ViewData["Title"] = "Department Details";
}

<h2 class="my-4">Department Details</h2>

<div class="card">
    <div class="card-header">
        <h4>@Model.DepartmentName</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Department State
            </dt>
            <dd class="col-sm-9">
                @Model.DepartmentState
            </dd>
            <dt class="col-sm-3">
                Students Over 25
            </dt>
            <dd class="col-sm-9">
                <select class="form-control">
                    @foreach (var studentName in Model.StudentNamesOver25)
                    {
                        <option>@studentName</option>
                    }
                </select>
            </dd>
        </dl>
    </div>
</div>

<a class="btn btn-secondary mt-3" asp-action="ShowAll">Back to List</a>
