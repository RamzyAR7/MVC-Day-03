@model MVC_Day_03.ViewModels.AddDepartmentViewModels

@{
    ViewData["Title"] = "Add Department";
}

<h2 class="my-4">Add Department</h2>

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MgrName" class="control-label"></label>
        <input asp-for="MgrName" class="form-control" />
        <span asp-validation-for="MgrName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add" class="btn btn-primary" />
    </div>
</form>

<a class="btn btn-secondary mt-3" asp-action="ShowAll">Back to List</a>

